<div class="container">
  <h1 class="text-center mt-3">メンバー申請</h1>

  <%= form_with url: check_member_requests_path, remote: true do %>
    <div class="d-flex justify-content-center mt-5">
      <label class="col-md-2 form-label required">部屋ID</label>
      <input name='room_token' , class="col-md-4">
    </div>
    <div class="d-flex justify-content-center mt-5">
      <%= button_tag 'メンバー申請する', type: 'submit', class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-3">
    <%= link_to "トップページへ", root_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="modal fade" id="confirm_modal" tabindex="-1" aria-hidden="true"></div>
